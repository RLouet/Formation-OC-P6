{% extends 'front/_front-base.html.twig' %}

{% block body %}
    <section class="container-fluid tricks-list" id="tricksList">
        {#
        <div class="row justify-content-around pt-sm-2 pt-xl-3">
            {% for trick in tricks %}
                <div class="col-12 col-md-4 col-xl-2 pt-3 pt-md-4 px-2 px-xl-0 mx-xl-1 trick-item">
                    <div class="item-container">
                        <img src="uploads/tricks/{{ trick.images|first.name }}" style="width: 100%">
                        <div class="item-content">
                            <h3>{{ trick.name }}</h3>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
        #}

        <div class="row row-cols-1 row-cols-md-3 row-cols-xl-5 justify-content-around pt-2 pt-xl-3">
            {% for trick in tricks %}
                <div class="col mb-3 mb-md-4 trick-item">
                    <div class="card h-100">
                        <div class="item-header">
                            <a href="#" title="Voir le trick">
                                <img src="{% if trick.hero %}uploads/tricks/{{ trick.hero.name }}{% elseif trick.images is not empty %}uploads/tricks/{{ trick.images|first.name }}{% else %}imgs/no-image.png{% endif %}" class="card-img-top">
                            </a>
                        </div>
                        <div class="card-body">
                            <h3 class="card-title mb-0">{{ trick.name }}</h3>
                        </div>
                        <div class="card-footer">
                            <div class="row">
                                <div class="col-6 text-center edit">
                                    <a href="#" title="Modifier le Trick" class="edit-btn"><em class="far fa-edit"></em></a>
                                </div>
                                <div class="col-6 text-center delete">
                                    <a href="#" title="Supprimer le Trick" class="delete-btn"><em class="far fa-trash-alt"></em></a>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

        <div class="row">
            <div class="col-12 text-center">
                <button class="btn btn-primary">Voir plus</button>
                <div class="trick-up"><a class="up-arrow" href="#tricksList" title="Premiers Tricks"><i class="fas fa-arrow-up"></i></a></div>
            </div>
        </div>
    </section>
{% endblock %}