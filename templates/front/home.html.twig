{% extends 'front/_front-base.html.twig' %}

{%  block headerHero %}
    <div id="homeHero">
        <div class="top-ref">&nbsp;</div>
        <a class="brand" href="{{ path('home') }}#"><h1 class="d-sm-none logo">SnowTricks</h1></a>
        <h2>La référence communautaire des Tricks de SnowBoard</h2>
        <div class="hero-bottom"><a class="down-arrow" href="#tricksList" title="Tricks"><em class="fas fa-arrow-down"></em></a></div>
    </div>
{% endblock %}

{% block content %}
    <section class="container-fluid tricks-list pb-3" id="tricksList">

        <div class="row row-cols-1 row-cols-md-3 row-cols-xl-5 justify-content-around pt-2 pt-xl-3">
            {% for trick in tricks %}
                <article class="col mb-3 mb-md-4 trick-item">
                    <div class="card h-100">
                        <div class="item-header">
                            <a href="{{ path('home-tricks-single', {'id' : trick.id}) }}" title="Voir le trick">
                                <img src="{% if trick.hero %}uploads/tricks/{{ trick.hero.name }}{% elseif trick.images is not empty %}uploads/tricks/{{ trick.images|first.name }}{% else %}imgs/no-image.png{% endif %}" class="card-img-top">
                            </a>
                        </div>
                        <div class="card-body">
                            <h3 class="card-title mb-0">{{ trick.name }}</h3>
                        </div>
                        <div class="card-footer">
                            <div class="row">
                                <div class="col-6 text-center edit">
                                    <a href="#" title="Modifier le Trick" class="edit-btn"><em class="far fa-edit"></em></a>
                                </div>
                                <div class="col-6 text-center delete">
                                    <a href="#" title="Supprimer le Trick" class="delete-btn"><em class="far fa-trash-alt"></em></a>
                                </div>
                            </div>

                        </div>
                    </div>
                </article>
            {% endfor %}
        </div>

        <div class="row">
            <div class="col-12 text-center">
                <button class="btn btn-primary">Voir plus</button>
                <div class="trick-up"><a class="up-arrow" href="#tricksList" title="Premiers Tricks"><em class="fas fa-arrow-up"></em></a></div>
            </div>
        </div>

    </section>
{% endblock %}