{% extends 'front/_front-base.html.twig' %}

{% block content %}
    <div id="contentContainer">
        <article class="container rounded trick-single pb-3">
            <header class="row">
                <div class="d-sm-none col-12 text-center brand-container">
                    <a class="brand" href="{{ path('home') }}#"><h1 class="logo">SnowTricks</h1></a>
                </div>
                <div class="col-12 trick-hero p-0 d-flex align-content-center flex-wrap" style="background-image: url('{{ asset('/') }}{% if trick.hero %}uploads/tricks/{{ trick.hero.name }}{% elseif trick.images is not empty %}uploads/tricks/{{ trick.images|first.name }}{% else %}imgs/no-image.png{% endif %}');">
                    <div class="overlay"></div>
                    <h2 class="vertical-align-middle w-100">{{ trick.name }}</h2>
                    <div class="row management-btns py-1 rounded">
                        <div class="col-6 text-center edit border-right border-dark">
                            <a href="#" title="Modifier le Trick" class="edit-btn"><em class="far fa-edit"></em></a>
                        </div>
                        <div class="col-6 text-center delete">
                            <a href="#" title="Supprimer le Trick" class="delete-btn"><em class="far fa-trash-alt"></em></a>
                        </div>
                    </div>
                </div>
            </header>
            <section class="row my-3 justify-content-center trick-medias">
                <div class="col-12 text-center d-md-none">
                    <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#mediasList" aria-expanded="false" aria-controls="mediasList">
                        Voir les médias
                    </button>
                </div>
                <div class="collapse col-12 mt-2 d-md-block" id="mediasList">
                    <div class="row p-0 justify-content-center">
                        {% for image in trick.images %}
                            <div class="col-md-2 px-1 image">
                                <img src="{{ asset('uploads/tricks/') }}{{ image.name }}" class="img-fluid">
                            </div>
                        {% endfor %}
                        {% for video in trick.videos %}
                            <div class="col-md-2 px-1 video">
                                <div class="embed-responsive embed-responsive-4by3">
                                    <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/{{ video.name }}?rel=0" allowfullscreen></iframe>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                    <div class="col-12 text-center mt-2 d-md-none">
                        <button class="btn btn-warning hide-medias" type="button" data-toggle="collapse" data-target="#mediasList" aria-expanded="false" aria-controls="mediasList">
                            Masquer les médias
                        </button>
                    </div>
                </div>
            </section>
            <section class="row p-2 trick-description">
                <p>{{ trick.description|nl2br() }}</p>
            </section>
            <section class="row justify-content-center trick-categories">
                {% for category in trick.categories %}
                    <a href="#" title="Voir les Tricks de la catégorie" class="badge badge-info">{{ category.name }}</a>
                {% endfor %}
            </section>
            <section class="row justify-content-center trick-infos">
                <div class="col-12 col-lg-auto text-center">
                    <span>Auteur : {{ trick.author.username }}</span>
                </div>
                <span class="d-none d-lg-inline">|</span>
                <div class="col-12 col-md-auto text-center">
                    <span>Ajouté le {{ trick.creationDate|date('d/m/Y à H:m:s') }}</span>
                </div>
                {% if trick.editDate %}
                    <span class="d-none d-md-inline">|</span>
                    <div class="col-12 col-md-auto text-center">
                        <span>Modifié le {{ trick.editDate|date('d/m/Y à H:m:s') }}</span>
                    </div>
                {% endif %}
            </section>
            <section class="row justify-content-center trick-messages border-top pt-3 mt-3">
                <div class="col-12 col-xl-7 text-center border-bottom pb-2">
                    <form>
                        <textarea class="form-control" placeholder="Votre commentaire" aria-label="Votre commentaire"></textarea>
                        <button class="btn btn-primary mt-2" type="submit">Envoyer votre commentaire</button>
                    </form>
                </div>
                {% for message in trick.messages %}
                    <div class="col-12 col-xl-7 mt-3">
                        <div class="border rounded px-2">
                            <p>{{ message.content }}</p>
                        </div>
                    </div>
                {% endfor %}
            </section>
        </article>
    </div>
{% endblock %}