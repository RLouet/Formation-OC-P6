{% extends 'front/_front-base.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block content %}
    <div id="contentContainer">
        <div class="container d-flex flex-column form-page">
            <header class="row d-sm-none">
                <div class=" col-12 text-center brand-container">
                    <a class="brand" href="{{ path('front_home') }}#"><h1 class="logo">SnowTricks</h1></a>
                </div>
            </header>
            <div class="row justify-content-center h-100">
                <div class="col-12 col-md-8 col-lg-6 rounded form-container align-self-center">
                    <h2 class="text-center">Mot de passe oublié</h2>

                    {% if app.user %}
                        <div class="mb-3">
                            Tu es déjà connecté en tant que {{ app.user.username }}, <a href="{{ path('security_logout') }}">Déconnexion</a>
                        </div>
                    {% endif %}

                    <form method="post">
                        <div class="form-group">
                            <label for="inputEmail">
                                Email
                            </label>
                            <input type="email" name="email" id="inputEmail" class="form-control" required autofocus>
                        </div>
                        <input type="hidden" name="token" value="{{ csrf_token('forgot-password') }}">
                        <div class="text-center">
                            <button class="btn btn-primary" type="submit">
                                Réinitialiser mon mot de passe
                            </button>
                        </div>
                    </form>

                </div>
            </div>
        </div>

    </div>
{% endblock %}